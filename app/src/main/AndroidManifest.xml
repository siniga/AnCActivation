<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aggreyclifford.active.ancactivation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RouteSettingActivity"
            android:label="@string/title_activity_set_activation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OutletActivationActivity"
            android:label="@string/title_activity_outlet_assignment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BrandActivationActivity"
            android:label="@string/title_activity_brand_activation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MemberMainActivity"
            android:label="@string/title_activity_member_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OutletRegistrationActivity"
            android:label="@string/title_activity_outlet_registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.OutletActivationActivity_Horeka"
            android:label="@string/title_activity_outlet_activation_activity__horeka"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>