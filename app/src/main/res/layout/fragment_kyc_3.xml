<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="left"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:gravity="center"-->
        <!--android:text="Know your customer"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold" />-->

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="date"
        android:textSize="18sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">


            <!--sample -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:text="Sampled?"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/is_sampled"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"></Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMidLightGrey" />

            <!--give aways-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:text="Won any prize?"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/is_prize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"></Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMidLightGrey" />

            <!--give away name-->
            <TextView
                android:id="@+id/prize_name_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:text="Name of the prize:"
                android:textStyle="bold"
                android:textSize="14sp" />
            <EditText
                android:hint="Enter name of the prize"
                android:id="@+id/prize_name_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"></EditText>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>